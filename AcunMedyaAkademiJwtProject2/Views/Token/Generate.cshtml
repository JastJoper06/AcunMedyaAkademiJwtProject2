@model SimpleUserDto
@{
    Layout = null;
}

<div class="container">
    <br /><br />
    <h3>Token Oluşturma</h3>
    <form method="post">
        <label>Adınız</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Soyadınız</label>
        <input type="text" asp-for="SurName" class="form-control" />
        <br />
        <label>Şehir</label>
        <input type="text" asp-for="City" class="form-control" />
        <br />
        <label>Kullanıcı Adınız</label>
        <input type="text" asp-for="UserName" class="form-control" />
        <br />
        <button class="btn btn-warning">Token Oluştur</button>
    </form>
    @if (!string.IsNullOrEmpty(Model?.Token))
    {
        <div class="alert alert-success">
            <strong>Token :</strong><br />
            <textarea rows="5" class="form-control">@Model.Token</textarea>
        </div>
    }
</div>